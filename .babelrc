{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                  "node": "current"
                }
            }
        ]
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": [
                    "./src"
                ],
                "alias": {
                    "@app": "./src/app",
                    "@modules": "./src/app/modules",
                    "@core": "./src/core",
                    "@db": "./src/app/db",
                    "@config": "./src/config"
                }
            }
        ]
    ]
}